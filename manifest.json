{
  "manifest_version": 3,
  "name": "PWA Generator",
  "version": "1.0",
  "description": "Create a PWA for any website dynamically.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "assets/icons/icon-128.png"
    }
  },
  "icons": {
    "128": "assets/icons/icon-128.png"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}